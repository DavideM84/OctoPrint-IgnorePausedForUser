<div class="ignorepausedforuser_plugin">
    <div id="ignorepaused_settings_container">
        <div class="row-fluid" id="ignore_paused_title">
            <div class="span9">
                <h3>Ignore 'Paused for user'</h3>
            </div>
        </div>
		<div class="row-fluid">
            <div class="span12">
                <div id="ignorepaused_body">
					<p>Octoprint plugin to ignore 'Paused for User' message from printer.</p>
                    <p style="text-align:center;"><img src="plugin/ignorepausedforuser/static/imgs/pausedZoom.jpg" style="width: 30%;" alt="Paused for user image" /></p>					
                </div>
            </div>
        </div>
		<div class="row-fluid">
            <div class="span12">
                <div id="ignorepaused_settings_nav">
                    <ul class="nav nav-pills">
                        <li class="dropdown pull-right tabdrop hide">
                            <a class="dropdown-toggle" data-toggle="dropdown">
                                <i class="icon-align-justify"></i>
                                <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu"></ul>
                        </li>
                        <li class="active">
                            <a href="#ignorepaused_settings_tab" data-toggle="tab">Settings</a>
                        </li>
                        <li>
                            <a href="#ignorepaused_history_tab" data-bind="click: function() {loadHistory(historyData);}" data-toggle="tab">History</a>
                        </li>                       
                    </ul>
                </div>
                <div class="tab-content">
                    <div id="ignorepaused_settings_tab" class="panel panel-default tab-pane active">
                        <div data-bind="template: 'ignorepaused_settings'"></div>
                    </div>
                    <div id="ignorepaused_history_tab" class="panel panel-default tab-pane">
                        <div data-bind="template: 'ignorepaused_history'"></div>
                    </div>
                </div>
            </div>
        </div>
		<div class="row-fluid">
            <div class="span12">
                <div id="ignorepaused_footer">
                    <small>IgnorePausedForUser v1.2</small>
                </div>
            </div>
        </div>
	</div>
</div>

{% include "ignorepaused_settings.jinja2" %}
{% include "ignorepaused_history.jinja2" %}